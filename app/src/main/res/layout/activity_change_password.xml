<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login.ChangePasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@null"
            android:onClick="onHomeClicked"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_chevron_left"
            app:tint="@color/textcolor" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"
            android:text="비밀번호 변경"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@null"
            app:tint="@color/textcolor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints="@null"
            android:background="@android:color/transparent"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingBottom="16dp"
            android:textColorHint="@color/detail"
            android:textSize="18sp" />

        <CheckBox
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:button="@drawable/selector_password_visibility"
            android:buttonTint="@color/detail"
            android:onClick="onClick" />
    </LinearLayout>

    <View
        android:id="@+id/bar_password"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/box1" />

    <TextView
        android:id="@+id/txt_warning_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:text="영문, 숫자 혼용 8자 이상"
        android:textColor="@color/box2"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_password_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints="@null"
            android:background="@android:color/transparent"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingBottom="16dp"
            android:textColorHint="@color/detail"
            android:textSize="18sp" />

        <CheckBox
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:button="@drawable/selector_password_visibility"
            android:buttonTint="@color/detail"
            android:onClick="onClick" />
    </LinearLayout>

    <View
        android:id="@+id/bar_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/box1" />

    <TextView
        android:id="@+id/txt_warning_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:text="비밀번호를 한 번 더 입력해주세요."
        android:textColor="@color/box2"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/back_button_light"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:onClick="onRequestClick"
        android:text="변경하기"
        android:textSize="18sp" />
</LinearLayout>