<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@null"
            android:onClick="onHomeClicked"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_chevron_left"
            app:tint="@color/textcolor" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"
            android:text="로그인"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@null"
            app:tint="@color/textcolor" />
    </LinearLayout>

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="56dp"
        android:autofillHints="@null"
        android:background="@android:color/transparent"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:paddingBottom="16dp"
        android:textColorHint="@color/detail"
        android:textSize="18sp" />

    <View
        android:id="@+id/bar_email"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/box1" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="32dp"
        android:autofillHints="@null"
        android:background="@android:color/transparent"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:paddingBottom="16dp"
        android:textColorHint="@color/detail"
        android:textSize="18sp" />

    <View
        android:id="@+id/bar_password"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/box1" />

    <TextView
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/back_button_light"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:onClick="onLoginClicked"
        android:text="로그인"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_find_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:onClick="onFindPasswordClicked"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 찾기"
                android:textColor="@color/detail"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_chevron_right"
                app:tint="@color/detail" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>