<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Register.MakeProfileActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@null"
            android:onClick="onHomeClicked"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_chevron_left"
            app:tint="@color/textcolor" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"
            android:text="프로필 생성"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@null"
            app:tint="@color/textcolor" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="56dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:src="@drawable/back_default_profile" />

        <Button
            android:id="@+id/img_profile_edit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="right|bottom"
            android:contentDescription="@null"
            android:background="@drawable/back_default_add"
             />
    </FrameLayout>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="56dp"
        android:autofillHints="@null"
        android:background="@android:color/transparent"
        android:hint="이름"
        android:inputType="text"
        android:paddingBottom="16dp"
        android:singleLine="true"
        android:textColorHint="@color/detail"
        android:textSize="18sp" />

    <View
        android:id="@+id/bar_name"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/box1" />

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="32dp"
        android:autofillHints="@null"
        android:background="@android:color/transparent"
        android:hint="\@아이디"
        android:inputType="text"
        android:paddingBottom="16dp"
        android:singleLine="true"
        android:textColorHint="@color/detail"
        android:textSize="18sp" />

    <View
        android:id="@+id/bar_id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/box1" />

    <TextView
        android:id="@+id/txt_warning_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:text="아이디를 입력해주세요."
        android:textColor="@color/box2"
        android:textSize="12sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/back_button_light"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:onClick="onNextButtonClicked"
        android:text="다음"
        android:textSize="18sp" />
</LinearLayout>