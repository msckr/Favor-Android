<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login.FindPasswordSecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@null"
            android:onClick="onHomeClicked"
            android:scaleType="center"
            android:src="@drawable/icon_left"
            app:tint="@color/textcolor" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"
            android:text="비밀번호 찾기"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@null"
            app:tint="@color/textcolor" />
    </LinearLayout>

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="56dp"
        android:autofillHints="@null"
        android:background="@android:color/transparent"
        android:hint="인증 코드"
        android:inputType="textEmailAddress"
        android:paddingBottom="16dp"
        android:textColorHint="@color/detail"
        android:textSize="18sp" />

    <View
        android:id="@+id/bar_email"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/box1" />

    <TextView
        android:id="@+id/txt_warning_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:text="favor@naver.com으로 전송된 6자리 코드를 입력하세요."
        android:textColor="@color/box2"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/back_button_light"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:onClick="onRequestClick"
        android:text="다음"
        android:textSize="18sp" />
</LinearLayout>